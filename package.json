{
	"name": "nix-env-selector",
	"displayName": "Nix Environment Selector",
	"description": "Allows switch environment for Visual Studio Code and extensions based on Nix config file.",
	"version": "0.0.8",
	"keywords": [
		"nix",
		"nix-env",
		"nix-shell",
		"vscode"
	],
	"license": "MIT",
	"publisher": "arrterian",
	"author": {
		"name": "Roman Valihura",
		"email": "roman.valihura@gmail.com"
	},
	"icon": "resources/icon.png",
	"engines": {
		"vscode": "^1.38.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/arrterian/nix-env-selector.git"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "output/Main/index.js",
	"contributes": {
		"configuration": {
			"title": "Nix Environment Selector",
			"properties": {
				"nixEnvSelector.nixShellConfig": {
					"type": "string",
					"default": null,
					"description": "Path for nix-shell config"
				},
				"nixEnvSelector.disabled": {
					"type": "boolean",
					"default": false,
					"description": "If true will disable Nix Environment for current workspace"
				}
			}
		},
		"commands": [
			{
				"command": "extension.selectEnv",
				"title": "Nix-Env: Select environment"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "yarn bundle:build && yarn bundle:clear-dev && yarn bundle:compress && yarn bundle:clear-tmp",
		"compile": "spago build",
		"watch": "spago build -w",
		"test": "spago test",
		"bundle:build": "spago bundle-module -t ./dist/Main/index.js",
		"bundle:clear-dev": "rm -rf output && mkdir -p output/Main",
		"bundle:compress": "terser ./dist/Main/index.js -o ./output/Main/index.js",
		"bundle:clear-tmp": "rm -rf dist"
	},
	"devDependencies": {
		"terser": "^5.5.1"
	}
}
